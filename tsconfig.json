{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ESNext",
    "module": "NodeNext",

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": "./src",
    "typeRoots": ["./src/types"],
    "paths": {
      "/*": ["./src/*"]
    }
  },
  "include": ["./src"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
